<Page x:Class="RestoranMarioMario.Pages.MenuDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestoranMarioMario.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="MenuDetail">

    <Grid>
        <Button x:Name="BtBack" Height="25" Width="25" HorizontalAlignment="Left" Click="BtBack_Click" Margin="10,11,0,0" Background="#e31d24" VerticalAlignment="Top" Grid.RowSpan="2" Style="{StaticResource mouseButton}">
            <Image Source="..\Resources\back.png" Width="20" Height="20"></Image>
        </Button>
        <TextBlock Text="Подробная информация" HorizontalAlignment="Center" FontSize="26"></TextBlock>
        <WrapPanel>
            <StackPanel Width="1000">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Name ="ImgPhoto" Source="{Binding CorrectPhoto}" Height="200" Width="450" Margin="0, 50, 0, 0"></Image>
                </StackPanel>
                <StackPanel>
                    <TextBlock Name = "TbName" VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Left" Width="auto" Margin="5" FontSize="42"></TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Категория:" FontWeight="Bold" Margin="5"></TextBlock>
                    <TextBlock Name = "TbCategory" VerticalAlignment="Center" TextAlignment="Left" Width="auto" Margin="5" ></TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Вес (г):" FontWeight="Bold" Margin="5"></TextBlock>
                    <TextBlock Name = "TbWeight" VerticalAlignment="Center" TextAlignment="Left" Width="auto" Margin="5" ></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Name = "TbSum" VerticalAlignment="Center" TextAlignment="Left" Width="auto" Margin="5"  FontSize="42"></TextBlock>
                    <TextBlock Text="р." VerticalAlignment="Center" TextAlignment="Left" Width="auto" Margin="5"  FontSize="42"></TextBlock>
                </StackPanel>
            </StackPanel>
        </WrapPanel>
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtBasket" Content="Добавить в корзину" Height="45" Click="BtBasket_Click" Style="{StaticResource mouseButton}" Margin="10"></Button>
        </StackPanel>
    </Grid>
</Page>
