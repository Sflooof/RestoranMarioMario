<Page x:Class="RestoranMarioMario.Pages.MenuDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestoranMarioMario.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="MenuDetail">

    <Grid>
        <WrapPanel Margin="0,0,0,80">
            <StackPanel Width="1000">
                <StackPanel Orientation="Horizontal">
                    <Image Name ="ImgPhoto" Height="200" Width="400" HorizontalAlignment="Center"></Image>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Название:" FontWeight="Bold"></TextBlock>
                    <TextBlock Name = "TbName" VerticalAlignment="Center" TextAlignment="Left" Width="auto" Margin="5 5" ></TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Категория:" FontWeight="Bold"></TextBlock>
                    <TextBlock Name = "TbCategory" VerticalAlignment="Center" TextAlignment="Left" Width="auto" Margin="5 5" ></TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Цена:" FontWeight="Bold"></TextBlock>
                    <TextBlock Name = "TbSum" VerticalAlignment="Center" TextAlignment="Left" Width="auto" Margin="5 5" ></TextBlock>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Вес (г):" FontWeight="Bold"></TextBlock>
                    <TextBlock Name = "TbWeight" VerticalAlignment="Center" TextAlignment="Left" Width="auto" Margin="5 5" ></TextBlock>
                </StackPanel>
            </StackPanel>
        </WrapPanel>
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtBack" Content="Назад" Height="45" Width="200" Click="BtBack_Click"></Button>
            <Button x:Name="BtBasket" Content="Добавить в корзину" Height="45" Width="200" Click="BtBasket_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
