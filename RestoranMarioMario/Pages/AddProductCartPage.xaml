<Page x:Class="RestoranMarioMario.Pages.AddProductCartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestoranMarioMario.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductCartPage">

    <Grid>
        <Button x:Name="BtBack" Height="20" Width="20" HorizontalAlignment="Left" Click="BtBack_Click" VerticalAlignment="Top"></Button>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Введити модификации"></TextBlock>
            <TextBox x:Name="CbExecuter" Text="{Binding executer1}" Height="177"></TextBox>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Итог:"></TextBlock>
                <TextBlock Text="{Binding }"></TextBlock>
            </StackPanel>
            <Button x:Name="BtSave" Content="сохранить" Click="BtSave_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
