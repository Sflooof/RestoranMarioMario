<Page x:Class="RestoranMarioMario.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestoranMarioMario.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="CartPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" Name="orderProductsListView" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="{Binding correctPhoto}"/>
                        <TextBlock Grid.Column="1" Text="{Binding MenuBarCard}" />
                        <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Стоимость: "/>
                                <TextBlock Text="{Binding Sum}"/>
                                <TextBlock Text="руб." />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Пометка:"/>
                                <TextBlock Text="{Binding Modification}"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Button Content="-" Name="BtMinus" Width="40" Height="40" Click="BtMinus_Click" />
                            <TextBlock Text="{Binding Quantity}" FontSize="20"/>
                            <Button Content="+" Name="BtPlus" Width="40" Height="40" Click="BtPlus_Click" />
                        </StackPanel>
                        <Button Grid.Column="4" Name="BtDelete" Click="BtDelete_Click" Content="Удалить"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Grid.Row="1" Name="OrderPriceBox" Text="Стоимость заказа: 5600 руб."/>
        <Button Grid.Row="2" Name="BtCreateOrder" Width="180" Height="40" Click="BtCreateOrder_Click" Content="Сформировать заказ"/>
        <Button Grid.Row="2" x:Name="BtPDF" Width="180" Height="40" HorizontalAlignment="Right" Click="BtPDF_Click"></Button>
    </Grid>
</Page>
