<Page x:Class="RestoranMarioMario.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestoranMarioMario.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Главная страница">

    <Grid>
        <Button x:Name="BtWaiter" Height="45" Width="200" Content="Вызов официанта" VerticalAlignment="Top" HorizontalAlignment="Right" Click="BtWaiter_Click"></Button>
        <TextBlock Text="Стол номер "></TextBlock>
        <TextBlock x:Name="TbTableNumber" Margin="90 10 0 0"></TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtMenu" Content="Меню" Width="300" Height="450" Click="BtMenu_Click"></Button>
            <Button x:Name="BtPlay" Content="Игра" Width="300" Height="450" Click="BtPlay_Click"></Button>
            <Button x:Name="BtBasket" Content="Корзина" Width="300" Height="450" Click="BtBasket_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
