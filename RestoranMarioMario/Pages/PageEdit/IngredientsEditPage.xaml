<Page x:Class="RestoranMarioMario.Pages.PageEdit.IngredientsEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestoranMarioMario.Pages.PageEdit"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="IngredientsEditPage">

    <Grid>
        <TextBlock Margin="20" FontSize="28" HorizontalAlignment="Center" FontWeight="Bold"> Добавление/Редактирование ингредиента</TextBlock>
        <Button x:Name="BtBack" Click="BtBack_Click" Height="20" Width="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,970,0"></Button>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Название ингредиента*</TextBlock>
            <TextBox x:Name="TbIngredient"></TextBox>
            <Button Name="BtSave" Width="280" Height="45" Content="Сохранить" Click="BtSave_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
