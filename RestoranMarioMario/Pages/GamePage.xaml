<Page x:Class="RestoranMarioMario.Pages.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestoranMarioMario.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" KeyDown="Window_KeyDown"
      Title="GamePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="5*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="CanvasGame" Background="White" Focusable="True"></Canvas>
        <Button x:Name="BtStart" Content="Начать игру!" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BtStart_Click"></Button>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
            <TextBlock x:Name="TbScore" Text="Счет: 0" HorizontalAlignment="Center"></TextBlock>
            <Button x:Name="BtRestart" Content="Начать заново!"  Visibility="Collapsed" Click="BtRestart_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
